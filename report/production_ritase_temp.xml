<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="production_ritase_temp">
        <t t-call="report.external_layout">
            <div class="page">
                <div class="oe_structure">
                    <t t-if="type == 'detail'" >
                        <div class="row">
                            <center>
                                <b>
                                    <h4>Ritase Report</h4>
                                </b>
                            </center>
                            <center>
                                <b>
                                    <span t-esc="start_date"/>
                                    To
                                    <span t-esc="end_date"/>
                                </b>
                            </center>
                        </div>
                        <br/>
                        <t t-set="total_sum" t-value="0"/>
                        <t t-set="total_rit" t-value="0"/>

                        <t t-foreach="data.keys()" t-as="item">
                            <table class="table table-condensed table-striped">
                                <thead>
                                    <tr>
                                        <th class="text-center">Document</th>
                                        <th class="text-center">Origin Location</th>
                                        <th class="text-center">Destination Location</th>
                                        <th class="text-center">Date</th>
                                        <th class="text-center">Driver</th>
                                        <th class="text-center">Dump Truck</th>
                                        <th class="text-center">Count</th>
                                        <!-- <th class="text-center">Amount</th> -->
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="data[item]" t-as="line">
                                        <td class="text-center">
                                            <span t-esc="line['doc_name']"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="line['location_name']"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="line['location_dest_name']"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="line['date']"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="line['driver_name']"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="line['vehicle_name']"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="'{:,}'.format(line['ritase_count'])"/>
                                            <t t-set="total_rit" t-value="total_rit + line['ritase_count']"/>
                                        </td>
                                        <!-- <td class="text-right">
                                            <span t-esc="'{:,}'.format(line['amount'])"/>
                                            <t t-set="total_sum" t-value="total_sum + line['amount']"/>
                                        </td> -->
                                    </tr>            
                                </tbody>
                            </table>
                        </t>

                        <div class="row">
                            <div class="col-xs-4 pull-right">
                                <table class="table table-condensed">
                                    <tr>
                                        <td><strong>Total</strong></td>
                                        <td class="text-right">
                                            <span t-esc="'{:,}'.format(total_rit)"/>
                                        </td>
                                        <!-- <td class="text-right">
                                            <span t-esc="'{:,}'.format(total_sum)"/>
                                        </td> -->
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </t>
                    <t t-if="type == 'summary'" >
                        <div class="row">
                            <center>
                                <b>
                                    <h4>Ritase Report</h4>
                                </b>
                            </center>
                            <center>
                                <b>
                                    <span t-esc="start_date"/>
                                    To
                                    <span t-esc="end_date"/>
                                </b>
                            </center>
                        </div>
                        <br/>
                        <!-- <t t-foreach="data.keys()" t-as="location"> -->
                            <!-- <div class="row">
                                <center>
                                    <b>
                                        <h4><span t-esc="location"/></h4>
                                    </b>
                                </center>
                            </div>
                            <br/> -->
                            <t t-set="total_sum" t-value="0"/>
                            <t t-set="total_rit" t-value="0"/>

                            <!-- <t t-foreach="data[location]" t-as="item"> -->
                                <table class="table table-condensed table-striped">
                                    <thead>
                                        <tr>
                                            <th class="text-center">Date</th>
                                            <th class="text-center">Document</th>
                                            <th class="text-center">Origin Location</th>
                                            <th class="text-center">Destination Location</th>
                                            <th class="text-center">Count</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- <t t-foreach="data.keys()" t-as="location"> -->
                                            <tr t-foreach="data.keys()" t-as="line">
                                                <td class="text-center">
                                                    <span t-esc="data[line]['date']"/>
                                                </td>
                                                <td class="text-center">
                                                    <span t-esc="data[line]['doc_name']"/>
                                                </td>
                                                <td class="text-center">
                                                    <span t-esc="data[line]['location_name']"/>
                                                </td>
                                                <td class="text-center">
                                                    <span t-esc="data[line]['location_dest_name']"/>
                                                </td>
                                                <td class="text-center">
                                                    <span t-esc="'{:,}'.format(data[line]['ritase_count'])"/>
                                                    <t t-set="total_rit" t-value="total_rit + data[line]['ritase_count']"/>
                                                </td>
                                            </tr>            
                                        <!-- </t> -->
                                    </tbody>
                                </table>
                            <!-- </t> -->

                            <div class="row">
                                <div class="col-xs-4 pull-right">
                                    <table class="table table-condensed">
                                        <tr>
                                            <td><strong>Total</strong></td>
                                            <td class="text-right">
                                                <span t-esc="'{:,}'.format(total_rit)"/>
                                            </td>
                                            <!-- <td class="text-right">
                                                <span t-esc="'{:,}'.format(total_sum)"/>
                                            </td> -->
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        <!-- </t> -->
                    </t>

                </div>
            </div>
        </t>
    </template>
</odoo>