<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="qaqc_coa_list" model="ir.ui.view">
        <field name="name">qaqc_coa_list</field>
        <field name="model">qaqc.coa</field>
        <field name="type">tree</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <tree string="COA List">
                <field name="name" />
                <field name="ni_spec" />
                <field name="fe_spec" />
                <field name="moisture_spec" />
                <field name="mineral_spec" />
            </tree>
        </field>
    </record>

    <record id="view_qaqc_coa_form" model="ir.ui.view">
            <field name="name">qaqc.coa.form</field>
            <field name="model">qaqc.coa</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form string="COA">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="ni_spec" />
                            <field name="fe_spec" />
                            <field name="moisture_spec" />
                            <field name="mineral_spec" />
                        </group>
                    </sheet>
                </form>
            </field>
    </record>
</odoo>
