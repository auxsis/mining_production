<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_mining_dumptruck_activity_form" model="ir.ui.view">
            <field name="name">mining.dumptruck.activity.form</field>
            <field name="model">mining.dumptruck.activity</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form string="Dump Truck Activity">
                    <sheet>
                        <group>
                            <field name="ritase_order_id" invisible="1"/>
                            <field name="vehicle_id" />
                            <field name="driver_id" />
                        </group>
                        
                        <notebook>
                            <page string="Logs"  >
                                <field name="log_ids" >
                                    <tree string="Logs" >
                                        <field name="datetime" />
									</tree>
                                </field >
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
    </record>
    <record id="view_mining_dumptruck_activity_log_form" model="ir.ui.view">
            <field name="name">mining.dumptruck.activity.log.form</field>
            <field name="model">mining.dumptruck.activity.log</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form string="Log">
                    <sheet>
                        <group>
                            <field name="dumptruck_activity_id" invisible="1"/>
                            <field name="datetime" />
                        </group>
                    </sheet>
                </form>
            </field>
    </record>
</odoo>
