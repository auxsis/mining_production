<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="production_hourmeter_order_list" model="ir.ui.view">
        <field name="name">production_hourmeter_order_list</field>
        <field name="model">production.hourmeter.order</field>
        <field name="type">tree</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <tree string="Hourmeter List">
                <field name="name" />
                <field name="date" />
                <field name="employee_id" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="view_production_hourmeter_order_form" model="ir.ui.view">
            <field name="name">production.hourmeter.order.form</field>
            <field name="model">production.hourmeter.order</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form string="Hourmeter">
                    <header>
                        <!-- <button name="button_draft" states="cancel" string="Set to Open" type="object" groups="mining_production.production_group_manager" />
                        <button name="button_confirm" string="Confirm" type="object" states="open" class="btn-primary" groups="mining_production.production_group_manager" />
                        <button name="button_cancel" states="open,confirm" string="Cancel" type="object" groups="mining_production.production_group_manager" /> -->
                        <field name="state" widget="statusbar" statusbar_visible="open,confirm" readonly="1"  />
                    </header>
                    <sheet>
                        <!-- <div class="oe_button_box" name="button_box">
                            <button type="object"
                                name="action_view_picking"
                                class="oe_stat_button"
                                icon="fa-truck" attrs="{'invisible':[('state', 'in', ('open')),('picking_ids','=',[])]}">
                                <field name="picking_count" widget="statinfo" string="Shipment" help="Incoming Shipments"/>
                                <field name="picking_ids" invisible="1"/>
                            </button>
                        </div> -->
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Hourmeter Name" ></label>
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                        <group>
                            <field name="date" />
                            <field name="employee_id" />
                            <field name="shift" />
                        </group>
                        
                        <notebook>
                            <page string="HE Hourmeter"  >
                                <field name="vehicle_hourmeter_log_ids"  >
                                    <tree string="HE Hourmeter" editable="bottom"  >
                                        <field name="hourmeter_order_id" invisible="1" />
                                        <field name="name" invisible="1" />
                                        <field name="date" invisible="1" />
                                        <field name="state" invisible="1" />
                                        <field name="cost_code_id" />
                                        <field name="block_id" />
                                        <field name="vehicle_id" />
                                        <field name="driver_id" />
                                        <field name="start" />
                                        <field name="end" />
                                        <field name="value" />
									</tree>
                                </field >
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
    </record>
</odoo>
